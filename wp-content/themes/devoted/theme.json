            ],
            "gradients": [
                {
                    "name": "Primary Base to Darker",
                    "slug": "primary-base-to-darker",
                    "gradient": "linear-gradient(to bottom right, var(--wp--preset--color--primary-base),var(--wp--preset--color--primary-darker))"
                },
                {
                    "name": "Secondary Base to Darker",
                    "slug": "secondary-base-to-darker",
                    "gradient": "linear-gradient(to bottom right, var(--wp--preset--color--secondary-base),var(--wp--preset--color--secondary-darker))"
                }
            ],
            "duotone": [
                {
                    "name": "Primary Secondary",
                    "slug": "primary-secondary",
                    "colors": [
                        "#88D6B3",
                        "#9E589E"
                    ]
                },
                {
                    "name": "Secondary Tertiary",
                    "slug": "secondary-tertiary",
                    "colors": [
                        "#9E589E",
                        "#FFAE57"
                    ]
                }
            ]
        },
        "dimensions": {
            "dimensionSizes": [
                {
                    "name": "Small VH",
                    "slug": "small-vh",
                    "size": "10vh"
                },
                {
                    "name": "Medium VH",
                    "slug": "medium-vh",
                    "size": "40vh"
                },
                {
                    "name": "Large VH",
                    "slug": "large-vh",
                    "size": "70vh"
                },
                {
                    "name": "Full VH",
                    "slug": "full-vh",
                    "size": "100vh"
                }
            ]
        },
		"layout": {
			"contentSize": "48rem",
			"wideSize": "85rem",
            "allowCustomContentAndWideSize": false
		},
        "shadow": {
            "defaultPresets": false,
            "presets": [
                {
                    "name": "Small",
                    "slug": "small",
                    "shadow": "0.5rem 0.5rem 0.5rem rgba(0, 0, 0, 0.2)"
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "shadow": "1rem 1rem 1rem rgba(0, 0, 0, 0.2)"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "shadow": "2rem 2rem 2rem rgba(0, 0, 0, 0.2)"
                }
            ]
        },
        "spacing": {
            "blockGap": true,
            "customSpacingSize": false,
            "defaultSpacingSizes": false,
			"units": [ "rem","vw","vh"],
            "spacingSizes": [
                {
                    "name": "2x Small",
                    "slug": "two-x-small",
                    "size": "0.4rem"
                },
                {
                    "name": "Extra Small",
                    "slug": "extra-small",
                    "size": "0.8rem"
                },
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "1.2rem"
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "size": "1.8rem"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "2.2rem"
                },
                {
                    "name": "Extra Large",
                    "slug": "extra-large",
                    "size": "3rem"
                },
                {
                    "name": "2x Large",
                    "slug": "two-x-large",
                    "size": "4rem"
                }
            ]
		},
        "typography": {
            "customFontSize": false,
            "defaultFontSizes": false,
            "fontFamilies": [
                {
                    "name": "Font Primary",
                    "slug": "font-primary",
                    "fontFamily": "Cormorant Garamond, serif",
                    "fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Baskerville",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400 700",
							"src": [ "file:./assets/fonts/Baskervville-VariableFont_wght.woff2" ]
						}
					]
                },
                {
                    "name": "Font Secondary",
                    "slug": "font-secondary",
                    "fontFamily": "Titillium Web, serif",
                    "fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Zalando Sans SemiExpanded",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "900",
							"src": [ "file:./assets/fonts/ZalandoSansSemiExpanded-VariableFont_wght.woff2" ]
						}
					]
                },
                {
                    "name": "Font Tertiary",
                    "slug": "font-tertiary",
                    "fontFamily": "Andale Mono, Cascadia Code, mono"
                }
            ],
            "fontSizes": [
                {
                    "name": "2x Small",
                    "slug": "two-x-small",
                    "size": "0.8rem"
                },
                {
                    "name": "Extra Small",
                    "slug": "extra-small",
                    "size": "0.9rem"
                },
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "1rem"
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "size": "1.3rem"
                },
                {
                    "name": "Large / Heading 6",
                    "slug": "heading-six",
                    "size": "2rem"
                },
                {
                    "name": "Extra Large / Heading 5",
                    "slug": "heading-five",
                    "size": "2.6rem"
                },
                {
                    "name": "Heading 4",
                    "slug": "heading-four",
                    "size": "3rem"
                },
                {
                    "name": "Heading 3",
                    "slug": "heading-three",
                    "size": "3.4rem"
                },
                {
                    "name": "Heading 2",
                    "slug": "heading-two",
                    "size": "4rem"
                },
                {
                    "name": "Heading 1",
                    "slug": "heading-one",
                    "size": "5rem"
                }
            ]
        },
        "useRootPaddingAwareAlignments": true,
        "custom": {
            "border-width": {
                "thin": "1px",
                "medium": "0.3rem",
                "thick": "0.7rem"
            },
            "layout": {
                "sidebar-main-width": "66%",
                "sidebar-aside-width": "34%"
            },
            "line-height": {
				"body": 1.6,
				"heading": 1.2,
				"heading-large": 1.3
			},
            "status-palette": {
                "error-light": "#EAA6A6",
                "error-base": "#B30F0F",
                "error-dark": "#630202",
                "warning-light": "#F1E1B4",
                "warning-base": "#DEAB14",
                "warning-dark": "#8A6904",
                "success-light": "#A9D1A6",
                "success-base": "#379E2D",
                "success-dark": "#095402"
            },
            "transition": {
                "time": "0.2s",
                "easing": "ease-in-out"
            }
        },
        "blocks": {
            "core/image": {
                "lightbox": {
                    "allowEditing": true
                }
            }
        }
	},
    "styles": {
		"color": {
			"background": "var(--wp--preset--color--neutral-white)",
			"text": "var(--wp--preset--color--neutral-darkest)"
		},
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--secondary-dark)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary-darker)"
                    }
                },
                ":active": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary-darkest)"
                    }
                },
                ":focus": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary-darker)"
                    }
                }
            },
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--font-secondary)",
                    "fontWeight": "700"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-one)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-two)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-three)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-four)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-five)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-six)"
                }
            },
            "button": {
                "color": {
                    "text": "var(--wp--preset--color--neutral-white)",
                    "background": "var(--wp--preset--color--primary-darker)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--font-secondary)",
                    "fontWeight": "700"
                },
                "border": {
                    "radius": "var(--wp--preset--border--radius-sizes--medium)"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--extra-small)",
                        "right": "var(--wp--preset--spacing--extra-large)",
                        "bottom": "var(--wp--preset--spacing--extra-small)",
                        "left": "var(--wp--preset--spacing--extra-large)"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-darkest)"
                    }
                },
                ":focus": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-darkest)"
                    }
                },
                ":active": {
                    "color": {
                        "background": "var(--wp--preset--color--neutral-darkest)"
                    }
                },
                "css": "transition: color var(--wp--custom--transition--time) var(--wp--custom--transition--easing), background-color var(--wp--custom--transition--time) var(--wp--custom--transition--easing);"
            },
            "caption": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontStyle": "italic"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary-lightest)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "padding": {
                        "top": "var(--wp--preset--spacing--extra-small)",
                        "right": "var(--wp--preset--spacing--small)",
                        "bottom": "var(--wp--preset--spacing--extra-small)",
                        "left": "var(--wp--preset--spacing--small)"
                    }
                },
                "border": {
                    "left": {
                        "color": "var(--wp--preset--color--primary-base)",
                        "width": "var(--wp--custom--border-width--thick)",
                        "style": "solid"
                    }
                }
            },
            "cite": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontStyle": "italic"
                },
                "css": "&::before{content: 'â€” ';}"
            }
        },
        "spacing": {
            "blockGap": "var(--wp--preset--spacing--medium)",
            "padding": {
                "left": "var(--wp--preset--font-size--medium)",
                "right": "var(--wp--preset--font-size--medium)"
            }
        },
        "typography": {
			"fontFamily": "var(--wp--preset--font-family--font-primary)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "var(--wp--custom--line-height--body)"
		},
        "blocks": {
            "core/columns": {
                "css": "&.is-style-sidebar { gap: var(--wp--preset--spacing--extra-large); }"
            }
        }
    }
}
